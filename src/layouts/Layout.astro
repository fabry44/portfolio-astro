        font-weight: 700;
    }

    html {
        font-size: 100%; /* 16px */
        font-family: "Scada";
        font-weight: 400;
        scroll-behavior: smooth;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        min-width: 100vw;
    }

