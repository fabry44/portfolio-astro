    #contactForm {
        background: var(--secondary);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 2px 2px 4px black;
    }

    input::placeholder,
    textarea::placeholder {
        color: grey;
    }

    .sectionFormation {
        max-width: 800px;
    }
    .divFormation {
        margin-left: 45%;
    }

    /* .classPair {
        width: 50%;
    } */
    .classImpair {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        text-align: end;
        padding-right: 50px;
        margin-left: -100%;
        width: 100%;
    }
    .sectionFooter {
        background: var(--background);
        min-height: 180px;
        display: flex;
        z-index: 10;
    }

    @media (prefers-reduced-motion: reduce) {
        html {
            scroll-behavior: auto;
        }
    }

    .curriculum {
        display: flex;
        margin-top: 20px;
        background: var(--accent);
        height: 345px;
        width: 190px;
        flex-direction: column;
        border-radius: 48px;
        justify-content: space-around;
        align-items: center;
        box-shadow: 2px 2px 4px black;
    }

    .curriculum body {
        font-family: "Lato", Helvetica, Arial, sans-serif;
        font-weight: 400;
        background: black;
        margin: 0;
        letter-spacing: 0.3px;
        color: #39424b;
        position: absolute;
        overflow: hidden;
    }

    iframe {
        position: absolute;
        background-color: var(--accent);
        color: white;
        border-radius: 15px;
        box-shadow: 3px -5px 12px 2px black;
    }

    .cta {
        position: relative;
        margin-top: 20px;
        background: var(--background);
        border-radius: 10px;
        border: groove var(--accent);
        color: var(--text);
    }

    .cta:hover {
        position: relative;
        margin-top: 20px;
        background: var(--background);
        border-radius: 10px;
        border: groove var(--accent);
        color: var(--text);
        box-shadow: 1px 2px 3px rgba(0, 0, 0, 0.5);
    }

    .cta:hover {
        background: var(--primary);
        box-shadow: 1px 3px 12px var(--primary);
    }

    .shadowstyle {
        box-shadow: 2px 2px 2px black;
    }

