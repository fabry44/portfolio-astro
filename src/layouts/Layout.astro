    :root {
        --text: #101c01;
        --background: #effae0;
        --primary: #374151;
        --secondary: #78fddb;
        --accent: #4ad4fc;
    }
    @media (prefers-color-scheme: dark) {
        :root {
            color-scheme: dark;
            --text: #f1fee1;
            --background: #141f05;
            --primary: #adb7c7;
            --secondary: #028866;
            --accent: #038eb5;
        }
    }

    
    header {
        background: transparent;
        transition: linear 1.3s;
    }

    header.scrolled {
        background: var(--primary);
        filter: drop-shadow(2px 4px 6px black);
        width: 100%;
        color: white;
        border-radius: 15px;
        opacity: 0.9;
    }

    @media screen and (min-width: 576px) {
        header.scrolled {
        background: var(--primary);
        filter: drop-shadow(2px 4px 6px black);
        width: 80%;
        color: white;
        border-radius: 15px;
        opacity: 0.9;
        }
        
    }

    @media screen and (min-width: 768px) {
        header.scrolled {
        background: var(--primary);
        filter: drop-shadow(2px 4px 6px black);
        width: 50%;
        color: white;
        border-radius: 15px;
        opacity: 0.9;
        }
        
    }

    .background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -10;
        background: radial-gradient(
            circle 200px at 50% 200px,
            #e3effd,
            transparent
        );
        filter: blur(100px);
    }

    
    .bg-section {
        background-image: url(/contact.webp);
        position: relative;
        background-attachment: fixed; /* Conserve l'effet de parallaxe */
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center top; /* Modifiez cette ligne pour ajuster la position */
        max-height: 1500px;
        padding: 3rem;
    }

    @media screen and (min-width: 768px) {
        .bg-section {
            background-image: url(/contact.webp);
            position: relative;
            background-attachment: fixed; /* Conserve l'effet de parallaxe */
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center top; /* Modifiez cette ligne pour ajuster la position */
            /* max-height: 1500px; */
            padding: 6rem;
        }        
    }



    .bg-section::before {
        content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.3);
    z-index: 1;
    backdrop-filter: blur(5px);
    }

    .bg-section > .flex {
        position: relative;
        z-index: 1; 
    }

    .contactsection {
        background: #374151ba;
        border-radius: 15px;
        padding: 30px;
    }


    .sectionFormation {
        max-width: 800px;
    }
    .divFormation {
        margin-left: 45%;
    }

    /* .classPair {
        width: 50%;
    } */
    .classImpair {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        text-align: end;
        padding-right: 50px;
        margin-left: -100%;
        width: 100%;
    }
    .sectionFooter {
        background: var(--primary);
        color: white;
        height: 80px;
        display: flex;
    }

    @media (prefers-reduced-motion: reduce) {
        html {
            scroll-behavior: auto;
        }
    }
