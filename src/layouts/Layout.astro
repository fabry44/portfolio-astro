    h1,
    h2,
    h3,
    h4,
    h5 {
        font-family: "Crimson Pro", sans-serif;
        font-weight: 700;
    }

    html {
        font-size: 100%; /* 16px */
        font-family: "Scada", sans-serif;
        font-weight: 400;
        /* scroll-behavior: smooth; */
        scroll-snap-type: y mandatory;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        min-width: 100vw;
        transition: background 0.3s ease;
    }

    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    @layer base {
        :root {
            --text: #050606;
            --background: #fcfcfc;
            --primary: #ebeae5;
            --secondary: #d9d6d3;
            --accent: #847c71;
        }
        .dark {
            --text: #f9fafa;
            --background: #272727;
            --primary: #ebeae5;
            --secondary: #d6d3c5;
            --accent: #d6d3c5;
        }
    }

    header {
        background: var(--background);
        opacity: 0.8;
        transition:
            background 0.3s ease,
            filter 0.3s ease,
            height 0.3s ease,
            border-radius 0.8s ease;
        z-index: 10;
    }

    header.scrolled {
        background: var(--background);
        filter: drop-shadow(2px 4px 6px black);
        width: 100%;
        z-index: 10;
        transition:
            background 0.3s ease,
            filter 0.3s ease,
            height 0.3s ease,
            border-radius 0.8s ease;
    }

    #toggle-dark-mode {
        background: var(--background);
        position: fixed;
        right: 10px;
        top: 60px;
        width: 45px;
        height: 45px;
        border-radius: 50%;
        transition:
            background 0.3s ease,
            filter 0.3s ease,
            height 0.3s ease,
            border-radius 0.8s ease;
        font-size: 25px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @media screen and (min-width: 576px) {
        header.scrolled {
            background: var(--background);
            /* color: white; */
            opacity: 0.9;
            transition:
                background 0.3s ease,
                filter 0.3s ease,
                height 0.3s ease,
                border-radius 0.8s ease;
        }
    }

    @media screen and (min-width: 768px) {
        header.scrolled {
            background: var(--background);
            opacity: 0.9;
            transition:
                background 0.3s ease,
                filter 0.3s ease,
                height 0.3s ease,
                border-radius 0.8s ease;
        }
    }

    .background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -10;
        background: radial-gradient(
            circle 200px at 50% 200px,
            #e3effd,
            transparent
        );
        filter: blur(100px);
    }

    .bg-section {
        background-image: url("/contact_fond_3.webp"); /* image Ã  remplacer une fois dispo */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;

        padding: 3rem 1rem;
        height: 1200px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    @media screen and (min-width: 768px) {
        .bg-section {
            height: 800px;
            padding: 6rem;
        }
    }

    /* .bg-section::before {
        content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.2);
    z-index: 1;
    backdrop-filter: blur(1px);
    } */

    .bg-section > .flex {
        z-index: 1;
    }

    .technoIcon {
        background: var(--secondary);
    }
    .ProjectCard {
        background: var(--primary);
        backdrop-filter: blur(15px);
        background-position: right top;
        background-size: 100%;
    }

    /* .contactsection {
